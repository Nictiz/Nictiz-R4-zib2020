      <path value="Observation.valueInteger"/>
      <sliceName value="valueInteger"/>
      <short value="TotalScore"/>
      <definition value="The total score is the sum of all the individual scores. The total score has a range from 0 - 5. The relation between the value of the total score and the color outcome of the score tool is:&lt;br /&gt;0-1 = green&lt;br /&gt;2= orange&lt;br /&gt;3 and higher = red."/>
      <alias value="TotaalScore"/>
      <type>
        <code value="integer"/>
      </type>
      <minValueInteger value="0"/>
      <maxValueInteger value="5"/>
      <mapping>
        <identity value="zib-snaqrcscore-v1.1-2020EN"/>
        <map value="NL-CM:4.29.2"/>
        <comment value="TotalScore"/>
      </mapping>
    </element>
