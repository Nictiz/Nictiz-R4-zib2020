<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="ext-POCT"/>
  <url value="http://nictiz.nl/fhir/StructureDefinition/ext-POCT"/>
  <version value="1.0.0"/>
  <name value="ExtPOCT"/>
  <title value="Point of Care Test"/>
  <status value="empty"/>
  <experimental value="false"/>
  <publisher value="Nictiz"/>
  <description value="Boolean flag indicating the laboratory test was point-of-care: indicated, performed, processed, interpreted, recorded and followed-up in the patient's vicinity by a qualified professional. Result available on-site."/>
  <purpose value="Indicates POCT using a boolean flag. Semantically aligned to SNOMED CT 405262001 |Point-of-care testing (procedure)| for systems that prefer a coded representation."/>
  <fhirVersion value="4.0.1"/>
  <kind value="complex-type"/>
  <abstract value="false"/>
  <type value="Extension"/>
  <context>
    <type value="element"/>
    <expression value="Observation"/>
  </context>
  
  <!-- Optional: also allow directly on components -->
  <context>
    <type value="element"/>
    <expression value="Observation.component"/>
  </context>
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Extension"/>
  <derivation value="constraint"/>

  <mapping>
    <identity value="sct"/>
    <uri value="http://snomed.info/sct"/>
    <name value="SNOMED CT"/>
  </mapping>

  <differential>
    <element id="Extension">
      <path value="Extension"/>
      <short value="Point of Care Test flag"/>
      <definition value="Indicates whether the observation was a point-of-care test."/>
      <max value="1"/>
    </element>

    <element id="Extension.url">
      <path value="Extension.url"/>
      <fixedUri value="http://nictiz.nl/fhir/StructureDefinition/ext-POCT"/>
    </element>

    <element id="Extension.value[x]">
      <path value="Extension.value[x]"/>
      <short value="POCT"/>
      <definition value="true = POCT; false or absent = not POCT/unknown"/>
      <type>
        <code value="boolean"/>
      </type>
      <mapping>
        <identity value="sct"/>
        <map value="405262001 |Point-of-care testing (procedure)|"/>
        </mapping>
    </element>
  </differential>
</StructureDefinition>